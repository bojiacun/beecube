/* components/live-room/index.wxss */
.live-room-container {
    position: relative;
    width: 100vw;
    height: 100vh;
}
.push-content, .play-content {
    width: 100vw;
    height: 100vh;
}
.modal-hide {
    position: absolute;
    left: 0;
    top: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
}
.user-info {
    /* width: 250rpx; */
    position: fixed;
    z-index: 3;
    top: calc(10vh + 32rpx);
    left: 25rpx;
    display: inline-block;
    height: 80rpx;
    border-radius: 40rpx;
    background-color: rgba(0, 0, 0, 0.3);
    display: flex;
    justify-content: flex-start;
    align-items: center;
    padding-left: 8rpx;
    color: #fff;
    font-size: 26rpx;
}
.user-info .avatar {
    width: 60rpx;
    height: 60rpx;
    border-radius: 50%;
    margin-right: 16rpx;
}
.user-text {
    margin-right: 30rpx;
    font-weight: 500;
}
.user-count {
    font-size: 22rpx;
}
.new-one {
    min-width: 200rpx;
    height: 48rpx;
    position: fixed;
    z-index: 2;
    bottom: 456rpx;
    background-color: rgba(255,13,64,0.6);
    color: #fff;
    padding: 0 16rpx;
    border-radius: 8rpx;
    margin-left: 24rpx;
    font-size: 26rpx;
    line-height: 48rpx;
}
.message-view {
    width: 568rpx;
    height: 300rpx;
    position: fixed;
    z-index: 3;
    bottom: 140rpx;
    margin-left: 24rpx;
    /* padding-top: 8rpx; */
}
.message-detail {
    margin-top: 8rpx;
    font-size: 0;
}
.message-detail:first-of-type{
    margin-top: 0;
}
.msg-text {
    display: inline-block;
    background-color: rgba(0, 0, 0, 0.2);
    font-size: 28rpx;
    line-height: 40rpx;
    color: #fff;
    padding: 0 16rpx;
    border-radius: 8rpx;
}
.operate {
    /* position: fixed;
    z-index: 2; */
    display: flex;
    align-items: center;
}
.img-box {
    width: 90rpx;
    height: 90rpx;
    margin: 0 2rpx;
}
.img-box .img {
    width: 100%;
    height: 100%;
}
.bot-bg {
    position: fixed;
    z-index: 1;
    bottom: 0;
    height: 126rpx;
    width: 100vw;
    background:linear-gradient(0deg,rgba(0,0,0,1),rgba(0,0,0,0));
    opacity:0.6;
}
.mmprise {
    position: fixed;
    z-index: 3;
    bottom: 0;
    width: 100vw;
    height: 126rpx;
    display: flex;
}
.mmprise-con {
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    padding: 0 24rpx;
    display: flex;
    justify-content: center;
}
.message-input {
    width: 100%;
    height: 88rpx;
    background-color: #fff;
    align-self: flex-end;
    display: flex;
    align-items: center;
    position: fixed;
}
.message-input .input-conteiner {
    width:558rpx;
    height:64rpx;
    background:rgba(244,244,244,1);
    border-radius:32rpx;
    margin: 0 24rpx;
    padding: 0 20rpx;
    display: flex;
    align-items: center;
    box-sizing: border-box;
}
.input-content {
    flex: 1;
    height: 28rpx;
}
.clear-input {
    width: 36rpx;
    height: 36rpx;
}
.message-input .send-btn {
    width:120rpx;
    height:64rpx;
    background:rgba(242,3,76,1);
    border-radius:32rpx;
    font-size: 30rpx;
    color: #fff;
    line-height: 64rpx;
    text-align: center;
    /* margin-right: 24rpx; */
}
.merchandise-img {
    width: 96rpx;
    height: 126rpx;
}
.merchandise-img image {
    width: 100%;
    height: 100%;
}
.input-button {
    /* width: 410rpx; */
    flex: 1;
    padding: 0rpx 20rpx;
    height: 70rpx;
    line-height: 70rpx;
    color: #fff;
    margin-top: 28rpx;
    margin-right: 18rpx;
    font-size: 26rpx;
    background-color: rgb(0,0,0, 0.3);
    border-radius: 30rpx;
}
.prise-img-box {
    position: relative;
}
.prise-count {
    position: absolute;
    height: 26rpx;
    background: rgba(255,192,0,0.9);
    border-radius: 13rpx;
    left: 50%;
    top: 5rpx;
    transform: translateX(-50%);
    min-width: 56rpx;
    padding: 0 16rpx;
    box-sizing: border-box;
    color: #fff;
    font-size: 18rpx;
    text-align: center;
}
.moreTool {
	position: fixed;
	width: 702rpx;
    height: 316rpx;
    left: 24rpx;
    bottom: 24rpx;
    background: rgba(0, 0, 0, 0.3);
    border-radius: 16rpx;
    color: #fff;
	display: flex;
    flex-direction: column;
    z-index: 3;
    padding-top: 30rpx;
	transition: all .25s 0s ease-in-out;
}

.moreToolHeader {
    display: flex;
    height: 56rpx;
    padding: 0 22rpx 0 40rpx;
	flex-direction: row;
	align-items: center;
	justify-content: space-between;
}
.head-left {
    display: flex;
}
.beauty-icon {
    width: 44rpx;
    height: 44rpx;
}
.beauty-text {
    font-size: 30rpx;
    color: #fff;
}

.moreToolHeaderIco {
	width: 56rpx;
	height: 56rpx;
}
.beauty-item {
    display: flex;
    align-items: center;
}
.beautyLabel {
	color: rgba(255, 255, 255, 1);
	font-size: 28rpx;
    margin-left: 20px;
    display: inline-block;
}
.beauty-slide {
    flex: 1;
    padding: 0;
}
.moreToolBody {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
}
.sub-video {
    position: fixed;
    right: 30rpx;
    z-index: 3;
    padding-top: 10rpx;
    padding-right: 10rpx;
}
.play-container {
    width: 190rpx;
    height: 250rpx;
    padding-right: 10rpx;
    padding-top: 10rpx;
    box-sizing: border-box;
    position: relative;
}
.close-icon {
    position: absolute;
    width: 44rpx;
    height: 44rpx;
    right: -7rpx;
    top: -7rpx;
}
video {
    height: auto;
}
.layout-1 {
    display: flex;
    width: 100%;
    padding-top: 170px;
}
.layout-1 > video {
    display: block;
    flex: 1;
    padding-top: 60%;
}

.layout-2 {
    display: flex;
    flex-direction: column;
    padding-top: 168rpx;
    padding-bottom: 168rpx;
    width: 100%;
    height: 100vh;
    box-sizing: border-box;
}
.layout-2 > video {
    flex: 1;
    display: block;
    width: 100%;
}

.layout-3 {
    width: 100vw;
    height: 100vh;
    position: relative;
}
.layout-3 > video:first-child {
    width: 100vw;
    height: 100vh;
}
.layout-3 > video:last-child {
    position: absolute;
    top: 140px;
    right: 20px;
}


.btn {
    border: none;
    border-radius: 19998rpx;
    display: inline-block;
    padding-top: 0rpx;
    padding-bottom: 0rpx;
    padding-left: 80rpx;
    padding-right: 80rpx;
}
.btn.btn-primary {
    background-image: -o-linear-gradient(left, var(--tw-gradient-stops));
    background-image: -webkit-gradient(linear, left top, right top, from(var(--tw-gradient-stops)));
    background-image: -webkit-linear-gradient(left, var(--tw-gradient-stops));
    background-image: linear-gradient(to right, var(--tw-gradient-stops));
    --tw-gradient-from: rgba(248, 113, 113, var(--tw-from-opacity, 1));
    --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, rgba(255, 255, 255, 0));
    --tw-gradient-to: rgba(220, 38, 38, var(--tw-to-opacity, 1));
    --tw-text-opacity: 1;
    color: rgba(255, 255, 255, var(--tw-text-opacity));
}

.btn.btn-danger {
    background-image: -o-linear-gradient(left, var(--tw-gradient-stops));
    background-image: -webkit-gradient(linear, left top, right top, from(var(--tw-gradient-stops)));
    background-image: -webkit-linear-gradient(left, var(--tw-gradient-stops));
    background-image: linear-gradient(to right, var(--tw-gradient-stops));
    --tw-gradient-from: rgba(248, 113, 113, var(--tw-from-opacity, 1));
    --tw-gradient-stops: var(--tw-gradient-from), var(--tw-gradient-to, rgba(255, 255, 255, 0));
    --tw-gradient-to: rgba(220, 38, 38, var(--tw-to-opacity, 1));
    --tw-text-opacity: 1;
    color: rgba(255, 255, 255, var(--tw-text-opacity));
}

.btn.block {
    width: 100%;
    display: block;
}
